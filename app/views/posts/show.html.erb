<% content_for :title, @post.title %>

<article class="post">
  <h2><%= @post.title %></h2>
  
  <div class="post-meta">
    Posted <%= time_ago_in_words(@post.created_at) %> ago
    <% if @post.updated_at != @post.created_at %>
      (Updated <%= time_ago_in_words(@post.updated_at) %> ago)
    <% end %>
  </div>

  <div class="post-content">
    <%= simple_format(@post.content) %>
  </div>

  <div class="post-actions">
    <%= link_to "Edit Post", edit_post_path(@post), class: "button" %>
    <%= link_to "Back to Posts", posts_path, class: "button" %>
    <%= button_to "Delete Post", @post, method: :delete, class: "button delete", 
                  form: { style: 'display: inline-block' },
                  data: { confirm: "Are you sure you want to delete this post?" } %>
  </div>
</article>

