<%= form_with(model: post, class: "form") do |form| %>
  <% if post.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(post.errors.count, "error") %> prevented this post from being saved:</h2>
      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, placeholder: "Enter your post title" %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, placeholder: "Write your post content here..." %>
  </div>

  <div class="actions">
    <%= form.submit class: "button" %>
    <%= link_to "Cancel", posts_path, class: "button" %>
  </div>
<% end %>